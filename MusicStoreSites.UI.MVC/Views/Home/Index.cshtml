@section scripts{
    <script>

        function GenreByAlbumList(id) {
            $("genreMenu div").removeClass("active");
            $("#menu_" + id).addClass("active");

            $.ajax({
                type: "Get",
                url: '@Url.Action("_GenreOfAlbums","Home")',
                data: { id: id },
                success: function (data) {
                    $("#albumList").html(data);
                }
            })
        }

    </script>

